<?xml version="1.0" encoding="utf-8"?>


<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="wrap_content"
    android:layout_marginEnd="16dp"
    android:layout_marginRight="16dp"
    android:paddingBottom="8dp">


    <ImageView
        android:id="@+id/tutorImage"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/profile_image" />

    <TextView
        android:id="@+id/tutorName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginLeft="12dp"
        android:text="Alaye Chris"
        android:textColor="@color/textColor"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@+id/tutorImage"
        app:layout_constraintTop_toTopOf="@+id/tutorImage" />

    <TextView
        android:id="@+id/textViewSubjectAndRating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="Chemistry Tutor - 4.6/5"
        app:layout_constraintStart_toStartOf="@+id/tutorName"
        app:layout_constraintTop_toBottomOf="@+id/tutorName" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:src="@drawable/ic_fav_checked"
        app:layout_constraintBottom_toBottomOf="@+id/textViewSubjectAndRating"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textViewSubjectAndRating" />

    <TextView
        android:id="@+id/aboutTutor"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintStart_toStartOf="@+id/tutorImage"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tutorImage"
        tools:text=" I teach with calmness and encouragement. My lessons are not boring and i can accomodate studentâ€™s with..." />

    <View
        android:id="@+id/view2"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="16dp"
        android:background="@color/dividingViewColor"
        app:layout_constraintEnd_toEndOf="@+id/aboutTutor"
        app:layout_constraintStart_toStartOf="@+id/aboutTutor"
        app:layout_constraintTop_toBottomOf="@+id/aboutTutor" />
</androidx.constraintlayout.widget.ConstraintLayout>
