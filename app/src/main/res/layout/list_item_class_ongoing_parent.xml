<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="classModel"
            type="com.mobileforce.hometeach.models.OngoingClassModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/cardBackground"
            app:cardCornerRadius="@dimen/card_radius"
            app:contentPadding="@dimen/card_margin"
            android:layout_margin="@dimen/card_margin">
            <!-- Card contents -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/subject_name"
                    style="@style/TextAppearance.MaterialComponents.Headline6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="0dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="8dp"
                    app:fontFamily="@font/ubuntu"
                    android:textAlignment="viewStart"
                    android:textColor="@color/textColor"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:gravity="start"
                    android:text="@{classModel.subject}"
                    android:layout_marginLeft="0dp"
                    android:layout_marginRight="8dp" />

                <ProgressBar
                    android:id="@+id/class_progress"
                    style="@android:style/Widget.ProgressBar.Horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="7dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:progressDrawable="@drawable/curved_progress_bar"
                    android:progress="@{classModel.progress}" />

                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:columnCount="3"
                    android:layout_gravity="fill"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_column="0"
                        style="@style/TextAppearance.MaterialComponents.Body1"
                        android:layout_columnWeight="1"
                        android:layout_row="0"
                        android:text="Next"
                        app:fontFamily="@font/ubuntu"
                        android:textColor="@color/blackColor" />

                    <GridLayout
                        android:columnCount="2"
                        android:layout_column="1"
                        android:layout_marginStart="10dp"
                        android:layout_row="0"
                        android:layout_columnWeight="1"
                        android:orientation="horizontal"
                        android:layout_marginLeft="10dp">

                        <ImageView
                            android:layout_column="0"
                            android:layout_row="0"
                            android:src="@drawable/ic_calender" />

                        <TextView
                            android:layout_column="1"
                            android:id="@+id/class_date"
                            android:layout_row="0"
                            android:text="@{classModel.date}"
                            style="@style/TextAppearance.MaterialComponents.Body1"
                            app:fontFamily="@font/ubuntu"
                            android:layout_marginStart="5dp"
                            android:textColor="@color/blackColor"
                            android:layout_marginLeft="5dp" />
                    </GridLayout>

                    <GridLayout
                        android:columnCount="2"
                        android:layout_column="2"
                        android:layout_marginStart="10dp"
                        android:layout_row="0"
                        android:layout_columnWeight="1"
                        android:orientation="horizontal"
                        android:layout_marginLeft="10dp">

                        <ImageView
                            android:layout_column="0"
                            android:layout_row="0"
                            android:src="@drawable/ic_time" />

                        <TextView
                            android:id="@+id/class_time"
                            android:text="@{classModel.time}"
                            android:layout_column="1"
                            android:layout_row="0"
                            android:layout_marginStart="5dp"
                            style="@style/TextAppearance.MaterialComponents.Body1"
                            app:fontFamily="@font/ubuntu"
                            android:textColor="@color/blackColor"
                            android:layout_marginLeft="5dp" />
                    </GridLayout>
                </GridLayout>

                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:columnCount="2"
                    android:layout_gravity="fill"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_column="1"
                        android:layout_columnWeight="1"
                        android:layout_gravity="end|center_vertical"

                        android:src="@drawable/ic_calculator" />

                    <GridLayout
                        android:columnCount="2"
                        android:rowCount="2"
                        android:layout_column="0"
                        android:layout_marginStart="0dp"
                        android:layout_marginTop="10dp"
                        android:layout_columnWeight="0"
                        android:orientation="horizontal"
                        android:layout_marginLeft="0dp">


                        <ImageView
                            android:id="@+id/tutor_image"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_row="0"
                            app:imagecircular="@{classModel.tutorImage}"
                            android:layout_rowSpan="2"
                            android:layout_column="0"
                            android:layout_marginEnd="10dp"
                            android:scaleType="centerCrop"
                            android:layout_marginRight="10dp" />

                        <TextView
                            android:id="@+id/tutor_name"
                            android:layout_column="1"
                            android:layout_row="0"
                            style="@style/TextAppearance.MaterialComponents.Body1"
                            app:fontFamily="@font/ubuntu"
                            android:textStyle="bold"
                            android:text="@{classModel.tutorName}"
                            android:textColor="@color/blackColor" />

                        <TextView
                            android:id="@+id/tutor_subject"
                            android:layout_column="1"
                            android:layout_row="1"
                            android:text="@{classModel.tutorSubject}"
                            style="@style/TextAppearance.MaterialComponents.Caption"
                            app:fontFamily="@font/ubuntu"
                            android:textColor="@color/blackColor" />
                    </GridLayout>
                </GridLayout>
            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>
</layout>