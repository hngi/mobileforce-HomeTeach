<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        app:layout_behavior="com.google.android.material.appbar.AppBarLayout$Behavior"
        android:background="#F2F2F2"
        app:elevation="0dp"
        android:layout_height="match_parent">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/materialCardView"
            style="@style/AppBarStyle"
            android:layout_marginBottom="-40dp"
            android:visibility="visible"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:elevation="0dp"
            app:cardBackgroundColor="@color/tab_bg"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <com.google.android.material.appbar.MaterialToolbar
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_scrollFlags="enterAlways|scroll"
                app:navigationIcon="@drawable/ic_baseline_arrow_back_24">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Card Details"
                    android:textSize="24sp" />


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_marginEnd="16dp"
                    android:layout_marginRight="16dp"
                    android:src="@drawable/ic_notify" />

            </com.google.android.material.appbar.MaterialToolbar>
        </com.google.android.material.card.MaterialCardView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"

            android:padding="50px"
            android:elevation="50dp">

            <!-- TODO: Update blank fragment layout -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:outlineSpotShadowColor="@android:color/transparent"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="@dimen/card_radius"
                app:contentPadding="@dimen/card_margin"
                app:cardElevation="@dimen/card_elevation">
                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:columnCount="2"
                    android:layout_gravity="fill"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_column="1"
                        android:layout_columnWeight="1"
                        android:layout_gravity="end|center_vertical"

                        android:src="@drawable/ic_calculator" />

                    <GridLayout
                        android:columnCount="3"
                        android:rowCount="2"
                        android:layout_column="0"
                        android:layout_marginStart="0dp"
                        android:layout_marginTop="10dp"
                        android:layout_columnWeight="0"
                        android:orientation="horizontal"
                        android:layout_marginLeft="0dp">


                        <ImageView
                            android:id="@+id/tutor_image"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_row="0"
                            android:layout_rowSpan="2"
                            android:layout_column="0"
                            android:layout_marginEnd="10dp"
                            android:scaleType="centerCrop"
                            android:layout_marginRight="10dp" />

                        <TextView
                            android:id="@+id/tutor_name"
                            android:layout_column="1"
                            android:layout_row="0"
                            style="@style/TextAppearance.MaterialComponents.Body1"
                            app:fontFamily="@font/ubuntu"
                            android:textStyle="bold"
                            android:textColor="@color/blackColor" />

                        <TextView
                            android:id="@+id/tutor_balance"
                            android:layout_column="1"
                            android:layout_row="1"
                            style="@style/TextAppearance.MaterialComponents.Caption"
                            app:fontFamily="@font/ubuntu"
                            android:textColor="@color/blackColor" />
                        <ImageView
                            android:layout_width="10dp"
                            android:layout_height="10dp"
                            android:layout_row="0"
                            android:layout_gravity="center_vertical"
                            android:layout_column="2"
                            android:src="@drawable/ic_noti_icon"
                            android:layout_marginStart="10dp"
                            android:scaleType="centerCrop"
                            android:layout_marginRight="10dp"
                            android:layout_marginLeft="10dp" />
                    </GridLayout>
                </GridLayout>
            </com.google.android.material.card.MaterialCardView>

            <TextView

                style="@style/TextAppearance.MaterialComponents.Body1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                app:fontFamily="@font/ubuntu"
                android:textAlignment="viewStart"
                android:textColor="@color/textColor"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:gravity="start"
                android:text="Please enter your credit card information below "/>


                <EditText
                    android:id="@+id/acc_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="15dp"
                    android:drawableStart="@drawable/ic_chip"
                    android:background="@drawable/edit_text_background"
                    android:hint="@string/account_name"
                    android:drawablePadding="12dp"
                    android:inputType="text"
                    android:padding="12dp"
                    android:drawableLeft="@drawable/ic_chip" />

                <EditText
                    android:id="@+id/acc_number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="15dp"
                    android:drawableStart="@drawable/ic_chip"
                    android:background="@drawable/edit_text_background"
                    android:hint="@string/account_name"
                    android:drawablePadding="12dp"
                    android:inputType="text"
                    android:padding="12dp"
                    android:drawableLeft="@drawable/ic_chip"
                    android:drawableEnd="@drawable/ic_camera"
                    android:drawableRight="@drawable/ic_camera" />
            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="2"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="5dp"
                android:layout_gravity="fill"
                android:orientation="horizontal"
                tools:ignore="MissingConstraints">

                <EditText
                    android:layout_column="0"
                    style="@style/TextAppearance.MaterialComponents.Body1"
                    android:layout_columnWeight="1"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/edit_text_background"
                    android:hint="@string/mm_yy"
                    android:padding="12dp"
                    android:textAlignment="center"
                    app:fontFamily="@font/ubuntu"
                    android:textColor="@color/blackColor"
                    tools:ignore="RtlCompat" />

                <EditText
                    android:layout_column="1"
                    style="@style/TextAppearance.MaterialComponents.Body1"
                    android:layout_columnWeight="0.5"
                    android:background="@drawable/edit_text_background"
                    android:hint="@string/cvv"
                    app:fontFamily="@font/ubuntu"
                    android:padding="12dp"
                    android:layout_marginLeft="15dp"
                    android:textAlignment="center"
                    android:textColor="@color/blackColor"
                    android:inputType="number"
                    android:gravity="center_horizontal" />




            </GridLayout>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/add_card_details_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="SAVE"
                android:padding="20dp"
                android:layout_marginTop="18dp"
                android:textColor="#fff"
                app:backgroundTint="#2F2E41"
                app:cornerRadius="10dp"
                style="@style/Widget.MaterialComponents.Button" />
        </LinearLayout>
    </com.google.android.material.appbar.AppBarLayout>
</layout>