<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:layout_margin="10dp"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:fontFamily="@font/ubuntu"
        android:text="Recover Password"
        android:textColor="@color/primaryDarkColor"
        android:textSize="25sp" />

    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:fontFamily="@font/ubuntu"
        android:text="Enter your Registered Email"
        android:textColor="@color/black"
        android:textSize="15sp" />

    <EditText
        android:id="@+id/email"
        android:layout_width="270dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:background="@drawable/email_dialog_background"
        android:drawableLeft="@drawable/email"
        android:drawableTint="@color/primaryLightColor"
        android:hint="hng@gmail.com"
        android:inputType="textEmailAddress"
        android:padding="5dp" />
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/submit"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_margin="15dp"
        android:background="@drawable/apply_background"
        android:fontFamily="@font/ubuntu"
        android:text="SUBMIT"
        android:textColor="@color/white" />

</LinearLayout>
