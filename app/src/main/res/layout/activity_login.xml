<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity"
    tools:targetApi="11">

    <TextView
        android:id="@+id/login_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/default_margin"
        android:fontFamily="@font/ubuntu"
        android:text="@string/log_in_textview"
        android:textColor="@color/login_text_color"
        android:textSize="@dimen/large_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/home_teach_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/medium_margin"
        app:layout_constraintEnd_toEndOf="@+id/login_text_view"
        app:layout_constraintStart_toStartOf="@+id/login_text_view"
        app:layout_constraintTop_toBottomOf="@+id/login_text_view"
        app:srcCompat="?android:attr/fingerprintAuthDrawable"
        tools:ignore="ContentDescription"
        />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="@dimen/large_linear_layout_width"
        android:layout_height="@dimen/large_linear_layout_height"
        android:layout_marginStart="@dimen/default_margin"
        android:layout_marginLeft="@dimen/default_margin"
        android:layout_marginTop="@dimen/small_margin"
        android:layout_marginEnd="@dimen/default_margin"
        android:layout_marginRight="@dimen/default_margin"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/password_input_field">

        <CheckBox
            android:id="@+id/save_password_button"
            android:layout_width="@dimen/noDP"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:fontFamily="@font/ubuntu"
            android:text="@string/save_password_checkbox_text"
            android:textColor="@color/login_text_color"
            android:textSize="@dimen/small_text" />

        <Button
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="@dimen/noDP"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:fontFamily="@font/ubuntu"
            android:text="@string/forgot_password"
            android:textAllCaps="false"
            android:textColor="@color/bright_green"
            android:textSize="@dimen/small_text" />

    </LinearLayout>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/default_margin"
        android:fontFamily="@font/ubuntu"
        android:text="@string/alternative_login_hint"
        android:textColor="@color/login_text_color"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button" />

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="@dimen/small_linear_layout_width"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/small_linear_layout_margin"
        android:layout_marginLeft="@dimen/small_linear_layout_margin"
        android:layout_marginTop="@dimen/default_margin"
        android:layout_marginEnd="@dimen/small_linear_layout_margin"
        android:layout_marginRight="@dimen/small_linear_layout_margin"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4">

        <ImageButton
            android:id="@+id/facebook_button"
            android:layout_width="@dimen/default_margin"
            android:layout_height="@dimen/button_image_height"
            android:layout_weight="1"
            android:src="@drawable/icons8_facebook_old_48"
            tools:ignore="ContentDescription" />

        <View
            android:id="@+id/divider"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.2"
            android:background="?android:attr/listDivider" />

        <ImageButton
            android:id="@+id/google_button"
            android:layout_width="@dimen/default_margin"
            android:layout_height="@dimen/button_image_height"
            android:layout_weight="1"
            android:src="@drawable/icons8_google"
            tools:ignore="ContentDescription" />

    </LinearLayout>

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/large_margin"
        android:fontFamily="@font/ubuntu"
        android:text="@string/dont_have_an_account"
        android:textColor="@color/login_text_color"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout3" />

    <Button
        android:id="@+id/button3"
        style="@style/Widget.MaterialComponents.Button.TextButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/special_margin"
        android:layout_marginBottom="@dimen/small_margin"
        android:drawableEnd="@android:drawable/ic_menu_edit"
        android:drawableRight="@android:drawable/ic_menu_edit"
        android:fontFamily="@font/ubuntu"
        android:text="@string/register_button"
        android:textAllCaps="false"
        android:textColor="@color/bright_green"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <EditText
        android:id="@+id/email_input_field"
        style="@android:style/Widget.Material.EditText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/default_margin"
        android:layout_marginLeft="@dimen/default_margin"
        android:layout_marginTop="@dimen/default_margin"
        android:layout_marginEnd="@dimen/default_margin"
        android:layout_marginRight="@dimen/default_margin"
        android:autofillHints=""
        android:drawableStart="@android:drawable/sym_action_email"
        android:drawableLeft="@android:drawable/sym_action_email"
        android:drawablePadding="@dimen/custom_drawable_padding"
        android:ems="10"
        android:fontFamily="@font/ubuntu"
        android:hint="@string/email_input_field_hint"
        android:inputType="textEmailAddress"
        android:textSize="@dimen/small_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/home_text_view" />

    <EditText
        android:id="@+id/password_input_field"
        style="@android:style/Widget.Material.Light.EditText"
        android:layout_width="@dimen/noDP"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/default_margin"
        android:layout_marginLeft="@dimen/default_margin"
        android:layout_marginTop="@dimen/special_margin"
        android:layout_marginEnd="@dimen/default_margin"
        android:layout_marginRight="@dimen/default_margin"
        android:autofillHints="password"
        android:drawableStart="@android:drawable/ic_lock_idle_lock"
        android:drawableLeft="@android:drawable/ic_lock_idle_lock"
        android:drawablePadding="@dimen/custom_drawable_padding"
        android:ems="10"
        android:fontFamily="@font/ubuntu"
        android:hint="@string/password_input_field_hint"
        android:inputType="textPassword"
        android:textSize="@dimen/small_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/email_input_field" />

    <TextView
        android:id="@+id/teach_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/philosopher"
        android:text="@string/teach_textview"
        android:textColor="@color/login_text_color"
        android:textSize="@dimen/large_text"
        app:layout_constraintBottom_toBottomOf="@+id/home_text_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/home_text_view"
        app:layout_constraintTop_toTopOf="@+id/home_text_view" />

    <TextView
        android:id="@+id/home_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/medium_margin"
        android:fontFamily="@font/philosopher"
        android:text="@string/home_textview"
        android:textColor="@color/bright_green"
        android:textSize="@dimen/large_text"
        app:layout_constraintEnd_toStartOf="@+id/teach_text_view"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/home_teach_image" />

    <Button
        android:id="@+id/button"
        android:layout_width="@dimen/large_linear_layout_width"
        android:layout_height="@dimen/login_button_layout_height"
        android:layout_marginStart="@dimen/default_margin"
        android:layout_marginLeft="@dimen/default_margin"
        android:layout_marginTop="@dimen/medium_margin"
        android:layout_marginEnd="@dimen/default_margin"
        android:layout_marginRight="@dimen/medium_margin"
        android:fontFamily="@font/ubuntu"
        android:text="@string/log_in_textview"
        android:textColor="@color/login_button_text_color"
        app:backgroundTint="@color/bright_green"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

</androidx.constraintlayout.widget.ConstraintLayout>